<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cartaRanking"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="6.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ranking_border"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/posicion"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/old_standard_tt_bold"
                android:gravity="center"
                android:text=""
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/nombre"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/old_standard_tt_italic"
                android:gravity="center"
                android:text=""
                android:textColor="#6A6A6A"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/puntuacionRanking"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/old_standard_tt_italic"
                android:gravity="center"
                android:text=""
                android:textColor="#6A6A6A"
                android:textSize="25sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>